module  background ( output logic [7:0]  Red, Green, Blue );
    
    logic background [420000:0];
	 int x, y;

always_ff @ (posedge frame_clk)
begin
for (y = 0; y < 525; y = y + 1)
	begin
   for (x = 0; x < 800; x = x + 1)
		begin
		if (y < 187 | y > 338)
			begin
			background[x + y * 800] = 1;

//			always_comb
				begin:RGB_Display
					Red = 8'h00;
					Green = 8'h00;
					Blue = 8'h00;
				end 
			end
		else
			begin
			background[x + y * 800] = sprite[(x-187) + y * 800];

//		always_comb
				begin:RGB_Display
					if ((background[x + y * 800] == 1'b0)) 
						begin 
							Red = 8'hff;
							Green = 8'hff;
							Blue = 8'hff;
						end       
					else 
						begin 
							Red = 8'h00; 
							Green = 8'h00;
							Blue = 8'h00;
						end 
				end 
			end 
		end
	end
end

endmodule
